<div class="flex items-center justify-between align-middle md:h-screen">
  <div
  x-data="{ open: false, selected: 'Hmm, let’s see...', options: ['Términos de uso', 'Aviso legal', 'Políticas de cookies', 'Declaración de accesibilidad'] }"
  class="relative w-80 mx-auto"
>


      <button
        @click="open = !open"
        class="bg-white w-full px-4 py-3 text-left border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-400 flex justify-between items-center"
      >
        <span x-text="selected"></span>
        <svg
          class="w-5 h-5 text-gray-500"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
        > 
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M8.25 15l3.75 3.75 3.75-3.75m0-6L12 5.25 8.25 9"></path>
        </svg>
      </button>

      <div
        x-show="open"
        @click.away="open = false"
        class="absolute w-full mt-2 bg-white border border-gray-300 rounded-lg shadow-lg z-10"
      >
        <ul>
          <template x-for="option in options" :key="option">
            <li
              @click="selected = option; open = false"
              class="px-4 py-3 hover:bg-gray-100 cursor-pointer"
            >
              <span x-text="option"></span>
            </li>
          </template>
        </ul>
      </div>
    </div>

  </div>
